<div class="form-container">
  <%= form_with(model: tuzo, class: "styled-form") do |form| %>
    <% if tuzo.errors.any? %>
      <div class="form-errors">
        <h2><%= pluralize(tuzo.errors.count, "error") %> prohibited this tuzo from being saved:</h2>
        <ul>
          <% tuzo.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div class="form-group">
      <%= form.label :phone %>
      <%= form.text_field :phone %>
    </div>

    <div class="form-group">
      <%= form.submit "Submit To win prize", class: "submit-btn" %>
    </div>
  <% end %>
</div>
