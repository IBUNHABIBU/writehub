<div class="home__recent__overlay"></div>
<% obj.each do |article| %>
    <div class="home__recent__container">
        <div class="home__recent__container__bg" <% if article.image.attached? %>style="background: url(<%= article.image %>);background-repeat: no-repeat; background-size: cover;"<% end %>>
            <div class="home__recent__container__bg__content">
                <% if article.categories.any? %>
                    <%= render article.categories %>
                <% end %>
                <div class="home__recent__container__bg__content__title">
                    <%= link_to article.title , article_path(article) %>
                </div>
            </div>
        </div>
    </div>
<%end%>